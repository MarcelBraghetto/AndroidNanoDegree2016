<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_list_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="4dp"
    android:paddingStart="4dp"
    android:paddingRight="4dp"
    android:paddingEnd="4dp"
    >

    <ImageView
        android:id="@+id/widget_list_item_image"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/widget_list_item_image"
        android:layout_toEndOf="@id/widget_list_item_image"
        >

        <TextView
            android:id="@+id/widget_list_item_title"
            android:textStyle="bold"
            style="@style/AppLargeText"
            />

        <TextView
            android:id="@+id/widget_list_item_author"
            style="@style/AppMediumText"
            />

    </LinearLayout>
</RelativeLayout>