<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/movie_details_video_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="4dp"
            android:background="#8d000000"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/movie_details_video_item_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share"
                android:clickable="true"
                android:layout_alignParentRight="true"
                />

            <TextView
                android:id="@+id/movie_details_video_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/full_white"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/movie_details_video_item_share_button"
                />

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/movie_details_video_item_play_button"
            style="@style/movie_details_video_play_button"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>
</FrameLayout>