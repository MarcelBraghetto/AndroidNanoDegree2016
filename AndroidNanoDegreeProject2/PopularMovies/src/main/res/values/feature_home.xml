<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Strings -->
    <string name="home_view_pager_title_popular">Popular</string>
    <string name="home_view_pager_title_top_rated">Top Rated</string>
    <string name="home_view_pager_title_favourites">Favourites</string>

    <!-- Styles -->
    <style name="home_coordinator_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="home_app_bar_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="home_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="home_tab_layout">
        <item name="android:layout_height">wrap_content</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="home_view_pager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>
</resources>